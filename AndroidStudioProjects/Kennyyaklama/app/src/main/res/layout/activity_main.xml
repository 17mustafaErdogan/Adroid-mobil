<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="380dp"
        android:layout_height="401dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highScore">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="artır"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="artır1"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="artır2"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="artır3"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="artır4"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="artır5"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="artır6"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="artır7"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="artır8"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="artır9"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="artır10"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="artır11"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="artır12"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="artır13"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="artır14"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="artır15"
            app:srcCompat="@drawable/kenny" />


    </GridLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="151dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TimeText" />

    <TextView
        android:id="@+id/TimeText"
        android:layout_width="152dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Kalan Zaman : 0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/highScore"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />


</androidx.constraintlayout.widget.ConstraintLayout>